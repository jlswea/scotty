# Scotty backup configuration
# Copy this file to config.env and adjust to your setup

# SSH alias for the NAS (from ~/.ssh/config)
NAS_SSH=nas

# NAS paths
NAS_COMPOSE_PATH=/volume1/docker/scotty
NAS_PHOTOS_PATH=/volume1/photo
NAS_PAPERLESS_EXPORT_PATH=/volume1/scotty/down
NAS_BACKUP_PATH=/volume1/backups
NAS_SCRIPTS_PATH=/volume1/scripts/scotty

# Local backup destination
LOCAL_BACKUP_PATH=${HOME}/NAS-Backup

# Fritz!Box SMB share (update after setting up external HDD)
FRITZBOX_SHARE=//fritz.box/FRITZ.NAS/USB-Stick
FRITZBOX_MOUNT=/mnt/fritzbox-backup
FRITZBOX_USER=nas-backup
